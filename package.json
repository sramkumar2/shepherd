{
  "name": "@nerdwallet/shepherd",
  "version": "1.16.0",
  "description": "A utility for applying code changes across many repositories",
  "keywords": [
    "codemod",
    "codemods",
    "migration"
  ],
  "homepage": "https://github.com/NerdWalletOSS/shepherd#readme",
  "bugs": {
    "url": "https://github.com/NerdWalletOSS/shepherd/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NerdWalletOSS/shepherd.git"
  },
  "license": "Apache-2.0",
  "author": "Nathan Walters",
  "bin": {
    "shepherd": "./lib/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "yarn build --watch",
    "fix-lint": "eslint src/**/*.ts --fix && prettier --write .",
    "lint": "eslint src/**/*.ts && prettier --check .",
    "prepublishOnly": "yarn test && yarn build",
    "test": "jest --coverage src/"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@octokit/plugin-retry": "^3.0.9",
    "@octokit/plugin-throttling": "^3.5.2",
    "@octokit/rest": "^18.12.0",
    "@types/js-yaml": "^3.12.6",
    "chalk": "^4.1.0",
    "child-process-promise": "^2.2.1",
    "commander": "^6.2.1",
    "fs-extra": "^9.1.0",
    "joi": "^17.4.0",
    "js-yaml": "^3.14.1",
    "lodash": "^4.17.19",
    "log-symbols": "^4.0.0",
    "netrc": "^0.1.4",
    "ora": "^5.3.0",
    "preferences": "^2.0.2",
    "simple-git": "^2.36.1"
  },
  "devDependencies": {
    "@octokit/plugin-rest-endpoint-methods": "^5.0.0",
    "@octokit/types": "^6.8.3",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^27.0.0",
    "@types/lodash": "^4.14.167",
    "@types/log-symbols": "^2.0.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^27.0.0",
    "prettier": "2.5.1",
    "semantic-release": "^19.0.0",
    "ts-jest": "^27.0.0",
    "typescript": "^3.9.9"
  },
  "publishConfig": {
    "access": "public"
  }
}
